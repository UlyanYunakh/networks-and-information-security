@model Country
@inject StationContext db
@{
    ViewBag.Title = "Добавить страну";
}

@await Html.PartialAsync("_Navbar", Navbar.Current.Countries)

<form asp-action="CountriesSave">

    <div class="form-floating my-2">
        <input type="text" class="form-control btn-warning bg-white" id="name" placeholder="Name" asp-for="Name">
        <label for="name" asp-for="Name">Название</label>
    </div>

    <div class="form-group d-grid gap-2">
        <button type="submit" class="btn btn-warning" type="button">Сохранить</button>
    </div>
    
</form>